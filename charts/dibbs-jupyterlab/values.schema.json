{
    "type": "object",
    "required": [
      "image"
    ],
    "additionalProperties": true,
    "properties": {
      "resourcePrefix": {
        "default": "dibbs-user",
        "description": "Define number of Jupyter pods running (only 1 is supported)",
        "title": "Prefix to apply to resource names and tags",
        "type": "string",
        "enum": [
          "dibbs-user"
        ]
      },
      "replicaCount": {
        "default": 1,
        "description": "Define number of Jupyter pods running (only 1 is supported)",
        "title": "Replica Count",
        "type": "integer",
        "enum": [
          1
        ]
      },
      "image": {
        "type": "object",
        "title": "Image",
        "description": "Define Jupyter image to use",
        "required": [
          "name",
          "tag"
        ],
        "additionalProperties": true,
        "properties": {
          "repository": {
            "type": "string",
            "title": "Docker Hub Repository",
            "description": "Define repository",
            "default": "jupyter",
            "enum": [
              "jupyter"
            ]
          },
          "name": {
            "type": "string",
            "title": "Image Name",
            "description": "Image to pull from Docker Hub",
            "default": "datascience-notebook",
            "examples": [
              "datascience-notebook",
              "minimal-notebook",
              "tensorflow-notebook"
            ]
          },
          "tag": {
            "type": "string",
            "title": "Image Tag",
            "description": "Image tag to pull from Docker Hub",
            "default": "lab-3.4.5",
            "examples": [
              "latest",
              "lab-3.4.5",
              "python-3.10.5"
            ]
          },
          "pullPolicy": {
            "type": "string",
            "title": "Pull Policy",
            "description": "Define image pull policy",
            "default": "IfNotPresent",
            "enum": [
              "Always",
              "IfNotPresent",
              "Never"
            ]
          }
        }
      }
    }
  }
  